    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
try{
        Class.forName("java.sql.Driver");
Connection con=DriverManager.getConnection("jdbc:mysql://localhost:3306/result","root","");// TODO add your handling code here:
String query ="select * from rcb where id ='"+idTxt.getText()+"' ";
PreparedStatement statement = con.prepareStatement(query);
ResultSet set = statement.executeQuery();

while(set.next()){
    nameTxt.setText(set.getString("name"));
    gradeTxt.setText(set.getString("grade"));
}
    }                                        
catch(Exception ex){
    JOptionPane.showMessageDialog(null,"Error Found! " + ex);
}
    private void BtnResetActionPerformed(java.awt.event.ActionEvent evt) {                                         
    idTxt.setText("");        // TODO add your handling code here:
    nameTxt.setText(""); 
    gradeTxt.setText(""); 
    }                                        

